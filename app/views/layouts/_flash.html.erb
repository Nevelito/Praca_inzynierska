<% flash.each do |type, message| %>
  <% next if type == 'timedout' %>
  <% flash_color = type == 'alert' ? 'bg-yellow-400' : 'bg-green-100' %>
  <div class="fixed top-0 left-1/2 -translate-x-1/2 p-3 z-[1000]">
    <div class="flex space-x-4 items-center w-full max-w-s p-4 text-gray-600 <%= flash_color %> rounded-lg shadow-lg transition transform duration-500"
         role="alert"
         data-controller="notification"
         data-notification-delay-value="3500"
         data-transition-enter-from="opacity-0"
         data-transition-enter-to="opacity-100"
         data-transition-leave-from="opacity-100"
         data-transition-leave-to="opacity-0">
      <div class="ms-3 text-sm">
        <% if message.is_a?(Set) %>
          <% message.each do |msg| %>
            <%= msg %><br>
          <% end %>
        <% else %>
          <%= message %>
        <% end %>
      </div>
      <button type="button" data-action="notification#hide" class="ml-auto -mx-1.5 -my-1.5 text-gray-400 hover:text-gray-900 rounded-lg p-1.5 inline-flex items-center justify-center h-8 w-8" aria-label="Close">
        <span class="sr-only">Close</span>
        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
        </svg>
      </button>
    </div>
  </div>
<% end %>
